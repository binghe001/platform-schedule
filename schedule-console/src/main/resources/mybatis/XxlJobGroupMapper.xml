<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.courage.platform.schedule.console.dao.XxlJobGroupDao">

	<resultMap id="XxlJobGroup" type="com.courage.platform.schedule.console.core.model.XxlJobGroup" >
		<result column="id" property="id" />
	    <result column="app_name" property="appName" />
	    <result column="title" property="title" />
	    <result column="order" property="order" />
		<result column="address_type" property="addressType" />
		<result column="address_list" property="addressList" />
	</resultMap>

	<sql id="Base_Column_List">
		t.id,
		t.app_name,
		t.title,
		t.order,
		t.address_type,
		t.address_list
	</sql>

	<select id="findAll" resultMap="XxlJobGroup">
		SELECT <include refid="Base_Column_List" />
		FROM HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP AS t
		ORDER BY t.order ASC
	</select>

	<select id="findByAddressType" parameterType="java.lang.Integer" resultMap="XxlJobGroup">
		SELECT <include refid="Base_Column_List" />
		FROM HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP AS t
		WHERE t.address_type = #{addressType}
		ORDER BY t.order ASC
	</select>

	<insert id="save" parameterType="com.hshc.schedule.com.courage.platform.schedule.com.courage.platform.schedule.console.core.model.XxlJobGroup" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP ( `app_name`, `title`, `order`, `address_type`, `address_list`)
		values ( #{appName}, #{title}, #{order}, #{addressType}, #{addressList});
	</insert>

	<update id="update" parameterType="com.hshc.schedule.com.courage.platform.schedule.com.courage.platform.schedule.console.core.model.XxlJobGroup" >
		UPDATE HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP
		SET `app_name` = #{appName},
			`title` = #{title},
			`order` = #{order},
			`address_type` = #{addressType},
			`address_list` = #{addressList}
		WHERE id = #{id}
	</update>

    <select id="existGroup" parameterType="com.hshc.schedule.com.courage.platform.schedule.com.courage.platform.schedule.console.core.model.XxlJobGroup" resultMap="XxlJobGroup">
        SELECT <include refid="Base_Column_List" />
        FROM HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP AS t
        WHERE t.app_name = #{appName}
    </select>

	<delete id="remove" parameterType="java.lang.Integer" >
		DELETE FROM HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP
		WHERE id = #{id}
	</delete>

	<select id="load" parameterType="java.lang.Integer" resultMap="XxlJobGroup">
		SELECT <include refid="Base_Column_List" />
		FROM HSHC_SCHEDULE_QRTZ_TRIGGER_GROUP AS t
		WHERE t.id = #{id}
	</select>
</mapper>